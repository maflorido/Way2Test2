
@using GitApi.Web.ViewModels.Repositorios;

@model DetalhesViewModel


@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Id repositório</label>
        <label>@Model.Id</label>
    </div>
    <div class="form-group">
        <label>Nome do repositório</label>
        <label>@Model.Name</label>
    </div>
    <div class="form-group">
        <label>Descrição do repositório</label>
        <label>@Model.Description</label>
    </div>
    <div class="form-group">
        <label>Linguage, do repositório</label>
        <label>@Model.Language</label>
    </div>
    <div class="form-group">
        <label>Data atualização do repositório</label>
        <label>@Model.UpdateDate</label>
    </div>
    <div class="form-group">
        <label>Dono do repositório</label>
        <label>@Model.Owner.Login</label>
    </div>

    
    @foreach (var item in Model.Colaboradores)
    {
        <ul>
            <li>login colaborador: @item.Login</li>
            <li>numero contribuições: @item.Contribuicoes</li>
        </ul>
    }
    
}